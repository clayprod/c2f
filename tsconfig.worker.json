{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist/worker",
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2019",
    "lib": ["es2019"],
    "isolatedModules": false,
    "strict": false,
    "noImplicitAny": false,
    "incremental": false,
    "types": ["node"]
  },
  "include": ["src/workers/**/*.ts"]
}
